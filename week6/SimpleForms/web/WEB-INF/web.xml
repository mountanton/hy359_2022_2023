<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Echo</servlet-name>
        <servlet-class>servlets.Echo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>servlets.Chat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AJAX_Request</servlet-name>
        <servlet-class>servlets.AJAX_Request</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tsitsipas_Servlet</servlet-name>
        <servlet-class>servlets.Tsitsipas_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IsRegistered</servlet-name>
        <servlet-class>servlets.IsRegistered</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Echo</servlet-name>
        <url-pattern>/Echo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AJAX_Request</servlet-name>
        <url-pattern>/AJAX_Request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tsitsipas_Servlet</servlet-name>
        <url-pattern>/Tsitsipas_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IsRegistered</servlet-name>
        <url-pattern>/IsRegistered</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
